@page
@model IndexModel
@using Newel.Web.Models.User
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    @if (Model.IsLogged)
    {
        <div class="container">
            <button type="button">
                <a asp-area="" asp-page="/Edit">Edit</a>
            </button>
        </div>

        <div class="container">
            <button type="button">
                <a asp-area="" asp-page="/Delete">Delete</a>
            </button>
        </div>
    }
    else
    {
        <div class="container">
            <button type="button">
                <a asp-area="" asp-page="/LogIn">Log In</a>
            </button>
        </div>

        <div class="container">
            <button type="button">
                <a asp-area="" asp-page="/Register">Register</a>
            </button>
        </div>
    }


    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</div>
